#!/bin/sh

FILTER=@SYSCONFDIR@/rules.filter

reload () {
    if test @BINDIR@/filtergen $FILTER > /dev/null ; then
	@BINDIR@/filtergen $FILTER | /bin/sh
    fi
    save
}

stop () {
    @BINDIR@/filtergen -F ACCEPT
}

save () {
}

usage () {
    echo <<EOF
usage: $0 [reload|stop|save]
EOF

case "$1" in
    reload)
	reload
	;;
    stop)
	stop
	;;
    save)
	save
	;;
    *)
	usage
	;;
esac
