Import('env')

env.Distribute(env['DISTTREE'], ['SConscript',
								'scan.c',
								'parse.c',
								'emit.c',
								])

env = env.Copy()
env.AppendUnique(CPPPATH=['../../..', '..'],
				 LIBPATH=['..'],
				 LIBS=['in_filtergen'],
				 CPPFLAGS=['-Dyyparse=filtergen_parse',
						   '-Dyydebug=filtergen_debug',
						   ])

env.Program('scan.c')
env.Program('parse.c')
env.Program('emit.c')
#env.Program('convert', source=['#t/convert.c', '#filter.o', '#fg-util.o'])
